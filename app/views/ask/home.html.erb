<%= render 'nav_bar', active: ask_home_path %>

<center>
    <div class="container-fluid">
        <%= form_tag ask_home_path, class: "question" do %>

        <div class='contenedor'>
            <div class="form-group">
                <%= text_area_tag :question, nil, class: "question form-control",placeholder: "Escribe un pregunta acá"  %>
            </div>
            <div class="form-group">
                <%= submit_tag "Preguntame!", class: "form-control btn btn-primary" %><br><br>
            </div>
            <% end %>
        </div>

        <div class='contenedor'>
            <%= button_tag "¿Como es Entel?", class: 'question-demo btn btn-default btn-block' %>
            <%= button_tag "¿Como está Providencia?", class: 'question-demo btn btn-default btn-block' %>
            <%= button_tag "¿Alemania gana la eurocopa?", class: 'question-demo btn btn-default btn-block' %>
            <%= button_tag "¿Como está Chile?", class: 'question-fixed btn btn-default btn-block' %>
        </div>

        <div class='contenedor'>
            <div class="error"></div>
            <div class="response"></div>
            <center></center>
        </div>
    </div>
</center>
